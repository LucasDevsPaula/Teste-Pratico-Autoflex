generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id    String  @id @default(uuid())
  code  String  @unique
  name  String
  price Decimal @db.Decimal(10, 2)

  materials ProductRawMaterial[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("products")
}

model RawMaterial {
  id             String  @id @default(uuid())
  code           String  @unique
  name           String
  stockyQuantity Decimal @db.Decimal(10, 2)

  products ProductRawMaterial[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("rawMaterials")
}

model ProductRawMaterial {
  id               String  @id @default(uuid())
  product_id       String
  rawMaterial_id   String
  requiredQuantity Decimal @db.Decimal(10, 2)

  product     Product     @relation(fields: [product_id], references: [id], onDelete: Cascade)
  rawMaterial RawMaterial @relation(fields: [rawMaterial_id], references: [id])

  @@unique([product_id, rawMaterial_id])

  @@map("productsRawMaterials")
}
